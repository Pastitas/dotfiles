#!/usr/bin/env bash

lock() {
    if [$XDG_SESSION_DESKTOP == "i3-gnome"]
    then
        dbus-send --type=method_call --dest=org.gnome.ScreenSaver /org/gnome/ScreenSaver org.gnome.ScreenSaver.Lock
    else
        # suspend message display
        pkill -u "$USER" -USR1 dunst
        # lock the screen
        i3lock-fancy-rapid 10 pixel
        # resume message display
        wait && pkill -u "$USER" -USR2 dunst;
    fi
}

susp() {
    # suspend message display
    pkill -u "$USER" -USR1 dunst;
    # lock the screen
    i3lock-fancy-rapid 10 pixel && dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 "org.freedesktop.login1.Manager.Suspend" boolean:true 
    # resume message display
    wait $pid pkill -u "$USER" -USR2 dunst;
}

hibernate() {
    # suspend message display
    pkill -u "$USER" -USR1 dunst;
    # lock the screen
    i3lock-fancy-rapid 10 pixel
    pid=$!
    dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 "org.freedesktop.login1.Manager.Hibernate" boolean:true 
    # resume message display
    wait $pid && pkill -u "$USER" -USR2 dunst;
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        susp
        ;;
    hibernate)
        hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 [lock|logout|suspend|hibernate|reboot|shutdown]"
        exit 2
esac

exit0

